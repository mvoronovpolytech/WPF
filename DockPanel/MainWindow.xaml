<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">
    <DockPanel Background="BlueViolet">
        <StackPanel Background="Aquamarine" DockPanel.Dock="Left" Margin="10, 10" MinWidth="100">
            <Button>Documents</Button>
            <Button>Products</Button>
            <Button>Colors</Button>
        </StackPanel>
        <DockPanel DockPanel.Dock="Right" Background="Beige">
            <StackPanel DockPanel.Dock="Top" Background="CornflowerBlue" Height="40">
                <Label>Header</Label>
            </StackPanel>
            <StackPanel DockPanel.Dock="Bottom" Background="DarkOrange" Height="40">
                <Label>Footer</Label>
            </StackPanel>
            <Grid></Grid>
        </DockPanel>
    </DockPanel>
</Window>
