<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Хрестики-нолики" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <UniformGrid x:Name="MainGrid" Columns="3" Rows="3">
        <Button x:Name="button_0_0" Grid.Column="0" Grid.Row="0" Click="buttonClick"></Button>
        <Button x:Name="button_1_0" Grid.Column="1" Grid.Row="0" Click="buttonClick"></Button>
        <Button x:Name="button_2_0" Grid.Column="2" Grid.Row="0" Click="buttonClick"></Button>
        <Button x:Name="button_0_1" Grid.Column="0" Grid.Row="1" Click="buttonClick"></Button>
        <Button x:Name="button_1_1" Grid.Column="1" Grid.Row="1" Click="buttonClick"></Button>
        <Button x:Name="button_2_1" Grid.Column="2" Grid.Row="1" Click="buttonClick"></Button>
        <Button x:Name="button_0_2" Grid.Column="0" Grid.Row="2" Click="buttonClick"></Button>
        <Button x:Name="button_1_2" Grid.Column="1" Grid.Row="2" Click="buttonClick"></Button>
        <Button x:Name="button_2_2" Grid.Column="2" Grid.Row="2" Click="buttonClick"></Button>
    </UniformGrid>
</Window>

