<Window x:Class="Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async"
        mc:Ignorable="d"
        Title="Ásync Await" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="LoadData" Grid.Row="0" Height="50" Width="250" Click="LoadData_Click">Завантажити данні</Button>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Label x:Name="LabelCounter" FontSize="18" HorizontalContentAlignment="Center" Height="50" Width="250">0</Label>
            <Button x:Name="IncrementButton" Height="50" Width="250" Click="IncrementButton_Click">Збільшити значення</Button>
        </StackPanel>
    </Grid>
</Window>
